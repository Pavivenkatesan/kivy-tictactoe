#:kivy 1.9.1

<MainMenuButton@Button>
    font_size: 50
    width: 100
    font_size: 50


<MultiplayerOptionButton@Button>
    font_size: 30


<GameButton@Button>:
    color: 0, 0, 0, 0.5
    siz_hint_x: None
    width: 200
    font_size: 100


<GameLayout@GridLayout>:
    cols: 3
    row_force_default: True
    col_default_width: 200
    row_default_height: 200
    pos_hint: { "center_x": 0.5 }
    size_hint: None, None
    size: self.minimum_size
    top: self.height


<MainMenuView>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Tic Tac Toe"
            font_size: 150
        MainMenuButton:
            id: btnHumanPlayer
            text: "Let me play first"
            on_release: root.btnHumanPlayer_release()

        MainMenuButton:
            id: btnAIPlayer
            text: "Let AI play first"
            on_release: root.btnBotPlayer_release()

        MainMenuButton:
            id: btnExit
            text: "Exit"
            on_release: root.btnExit_release()

<SinglePlayerView>:
